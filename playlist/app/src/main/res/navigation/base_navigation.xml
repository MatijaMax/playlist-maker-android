<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_navigation"
    android:label="Managing event types"
    app:startDestination="@+id/nav_home">
    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.myapplication.fragments.HomeFragment"
        android:label="Home page"
        tools:layout="@layout/home_fragment" />

    <fragment
        android:id="@+id/nav_genres"
        android:name="com.example.myapplication.fragments.GenreListFragment"
        android:label="Genres page"
        tools:layout="@layout/fragment_genre_list" />

    <fragment
        android:id="@+id/nav_artists"
        android:name="com.example.myapplication.fragments.ArtistListFragment"
        android:label="Artists page"
        tools:layout="@layout/fragment_artist_list" />

    <fragment
        android:id="@+id/nav_songs"
        android:name="com.example.myapplication.fragments.SongListFragment"
        android:label="Songs page"
        tools:layout="@layout/fragment_song_list" />

    <fragment
        android:id="@+id/nav_playlists"
        android:name="com.example.myapplication.fragments.PlaylistPageFragment"
        android:label="Playlists page"
        tools:layout="@layout/fragment_playlist_list" />

    <fragment
        android:id="@+id/nav_playlist_list"
        android:name="com.example.myapplication.fragments.PlaylistListFragment"
        android:label="Playlists page"
        tools:layout="@layout/fragment_helper_list"
        />

    <fragment
        android:id="@+id/nav_helper"
        android:name="com.example.myapplication.fragments.HelperListFragment"
        android:label="Playlists songs"
        tools:layout="@layout/fragment_helper_list"
        />

</navigation>